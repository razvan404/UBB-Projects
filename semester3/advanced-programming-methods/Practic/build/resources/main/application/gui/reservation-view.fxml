<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ReservationViewController">
   <children>
      <VBox alignment="CENTER" fillWidth="false" layoutX="10.0" layoutY="10.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="titleLabel" text="Hotel X reservation">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="startDateField" prefHeight="25.0" prefWidth="280.0" promptText="start date (DD.MM.YYYY HH:MM)">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <TextField fx:id="noNightsField" prefHeight="25.0" prefWidth="280.0" promptText="number of nights">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Text fx:id="errorText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Error text">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Text>
            <Button mnemonicParsing="false" onAction="#handleReserveButton" text="RESERVE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
